                    <td><label from="kitchen">Kitchen</label><input type="number" id="kitchen" class="border-none"></td>
                    <td><label from="bathrooms">Bathrooms</label><input type="number" id="bathrooms" class="border-none"></td>
                    <td><label from="totals">Totals</label><input type="number" id="totals" class="border-none"></td>
                </tr>

                <tr>
                    <td><h2>Other property features</h2></td>
                </tr>

                <tr>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Balcony</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Fiber optic</label></td>
