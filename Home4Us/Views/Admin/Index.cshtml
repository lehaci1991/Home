
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";



}

<div id="Container-head">
    <div class="main">
        <nav class="navbar navbar-inverse no-margin">
            <div class="container-fluid">
                <div class="navbar-header">
                    <h2>Home4Us</h2>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#4Rent">4RENT</a></li>
                    <li><a href="#4Sell">4SELL</a></li>
                    <li><a href="#Log Out"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <div id="myCarousel" class="carousel" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="/Resources/banner1.png" alt="Banner1">
            </div>

            <div class="item">
                <img src="/Resources/banner2.jpg" alt="Banner2">
            </div>

            <div class="item">
                <img src="/Resources/banner3.jpg" alt="Banner3">
            </div>
        </div>

        <!--Left and right control-->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <div id="Container-body">
        <h1>Recent Request</h1>
        <table>
            <tr>
                <td><h2 class="glyphicon glyphicon-chevron-down">Request ID</h2></td>
                <td><h2 class="glyphicon glyphicon-chevron-down">Client details</h2></td>
                <td><h2 class="glyphicon glyphicon-chevron-down">Status</h2></td>
            </tr>

            @{
                Home4Us_Models_BL.BSL.UsersService user = new Home4Us_Models_BL.BSL.UsersService();
                List<Home4Us_Models.Users> list_prop = (List<Home4Us_Models.Users>)user.GetUsers();

            }
            @for (int item = 0; item < list_prop.Count; item++)
            {
                <tr>
                    <td></td>
                    <td>@list_prop[item].Email @list_prop[item].FirstName</td>
                    <td></td>
                </tr>
            }


        </table>
    </div>
    <div id="Container-manage">
        <h1 class="glyphicon glyphicon-briefcase"> Manage your properties</h1>
        <div id="table-manage">
            <table>
                <tr>
                    <td><label>Property Option</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Rent</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Sale</label></td>
                </tr>

                <tr>
                    <td><label for="name">Property name</label></td>
                    <td><input type="text" id="name" class="border-none"></td>
                </tr>

                <tr>
                    <td><label for="address">Property address</label></td>
                    <td><input type="text" id="address" class="border-none"></td>
                </tr>

                <tr>
                    <td><label for="address">Property price</label></td>
                    <td><input type="number" id="price" class="border-none"><label>$/month</label></td>

                    <td>
                        <label for="typeS">Type </label>
                        <select id="typeS">
                            <option type="penthouse">penthhouse</option>
                            <option type="singleRoom">singleroom</option>
                            <option type="doubleroom">doubleroom</option>
                        </select>
                    </td>
