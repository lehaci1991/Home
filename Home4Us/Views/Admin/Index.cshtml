                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Drier</label></td>
                </tr>

                <tr>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Garage</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" unchecked><label id="label-space">TV</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Park</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" unchecked><label id="label-space">Garage</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Quiet area</label></td>
                </tr>

                <tr>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" unchecked><label id="label-space">Air conditon</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">All furniture</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" unchecked><label id="label-space">Bus</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Hospital</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Fence</label></td>
                </tr>

                <tr>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Inernet</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Storage room</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" unchecked><label id="label-space">Schools</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Heated floor</label></td>
                    <td><input type="checkbox" class="checkbox-size" name="quux[1]" checked><label id="label-space">Pool</label></td>
                </tr>

                <tr>
                    <td><button id="btn-uploads" class="glyphicon glyphicon-level-up "></button><label>Uploads photos:</label><a href="#img1">img.jpg</a></td>
                </tr>

                <tr>
                    <td><button id="btn-add" type="button" class="btn btn-primary">Add</button></td>
                </tr>
            </table>
        </div>
    </div>

